          <div class="container" style="margin-top: 80px;">
            <h1 class="text-center text-dark">Data Anggota</h1>
            <div class="container">

              <div class="row mt-4">
                <!-- Kolom pertama di pojok kiri -->
                <div class="col d-flex justify-content-start">
                  <div class="col-md-4 d-flex justify-content-start">
                    <a href="/anggota/create" class="btn btn-sm btn-success me-2">
                      <svg xmlns="http://www.w3.org/2000/svg" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                      </svg> Tambah Anggota
                    </a>
                  </div>
                </div>
              
                <!-- Kolom kedua di pojok kanan -->
                <div class="col d-flex justify-content-end">
                  <div class="col-md-4 d-flex justify-content-end">
                    <select class="form-select" id="roleFilter">
                      <option value="">Semua</option>
                      <option value="2">Damkar</option>
                      <option value="7">Satpol PP</option>
                    </select>
                  </div>
                </div>
              </div>


                <!-- Div pertama di pojok kiri -->
                
              
                <!-- Div kedua di pojok kanan -->
                
              
              
              <% if (messages.error) { %>
                <div id="pesan-alert" class="alert alert-danger" role="alert"><%- messages.error %></div>
              <% } else if (messages.success) { %>
                <div id="pesan-alert" class="alert alert-info" role="alert"><%- messages.success %></div>
              <% } %>
            </div>
            <div class="col">
              <table class="table table-striped mt-4">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">foto</th>
                    <th scope="col">Nama Anggota</th>
                    <th scope="col">Email</th>
                    <th scope="col">Peran</th>
                    <th colspan="2" scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < users.length; i++) { %>
                    <tr>
                      <th scope="row"><%= i + 1 %></th>
                      <td>
                        <span class="user-name"><img src="../../images/upload/<%= users[i].foto %>" height="40" alt=""></span>
                        <input type="text" class="form-control user-input d-none" value="<%= users[i].foto %>"/>
                      </td>
                      <td>
                        <span class="user-name"><%= users[i].nama_users %></span>
                        <input type="text" class="form-control user-input d-none" value="<%= users[i].nama_users %>"/>
                      </td>
                      <td>
                        <span class="email"><%= users[i].email %></span>
                        <input type="text" class="form-control email-input d-none" value="<%= users[i].email %>"/>
                      </td>
                      <td>
                        <span class="role-name"><%= users[i].nama_role %></span>
                        <input type="text" class="form-control role-input d-none" value="<%= users[i].nama_role %>"/>
                      </td>
                      <td>
                        <a href="/anggota/edit/<%= users[i].id_users %>" class="btn btn-sm btn-warning">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5.5 0 0 0 1 2.5z"/>
                          </svg>
                        </a>
                        <!-- Tombol Hapus -->
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#ModalHapus" data-user-id="<%= users[i].id_users %>" data-user-name="<%= users[i].nama_users %>">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                          </svg>
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="ModalHapus" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Hapus Data</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Apakah Anda yakin ingin menghapus User <span id="userName"></span>?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Batal</button>
                                <a id="deleteButton" href="" class="btn btn-danger">Hapus Sekarang</a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <script>
        document.addEventListener("DOMContentLoaded", function() {
          const roleFilter = document.getElementById('roleFilter');
      
          roleFilter.addEventListener('change', function() {
            const roleId = roleFilter.value;
            
            // Kirim permintaan AJAX ke server
            fetch(`/anggota/filter?role=${roleId}`)
              .then(response => response.json())
              .then(data => {
                // Update tabel dengan data baru
                updateTable(data);
              })
              .catch(error => console.error('Error:', error));
          });
      
          function updateTable(users) {
            const tableBody = document.querySelector('table tbody');
            tableBody.innerHTML = ''; // Clear existing table rows
      
            users.forEach((user, index) => {
              const row = document.createElement('tr');
              
              row.innerHTML = `
                <th scope="row">${index + 1}</th>
                <td>
                  <span class="user-name"><img src="../../images/upload/${user.foto}" height="40" alt=""></span>
                  <input type="text" class="form-control user-input d-none" value="${user.foto}"/>
                </td>
                <td>
                  <span class="user-name">${user.nama_users}</span>
                  <input type="text" class="form-control user-input d-none" value="${user.nama_users}"/>
                </td>
                <td>
                  <span class="email">${user.email}</span>
                  <input type="text" class="form-control email-input d-none" value="${user.email}"/>
                </td>
                <td>
                  <span class="role-name">${user.nama_role}</span>
                  <input type="text" class="form-control role-input d-none" value="${user.nama_role}"/>
                </td>
                <td>
                  <a href="/anggota/edit/${user.id_users}" class="btn btn-sm btn-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5.5 0 0 0 1 2.5z"/>
                    </svg>
                  </a>
                  <!-- Tombol Hapus -->
                  <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#ModalHapus" data-user-id="${user.id_users}" data-user-name="${user.nama_users}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                      <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                    </svg>
                  </button>
                  <!-- Modal -->
                  <div class="modal fade" id="ModalHapus" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="exampleModalLabel">Hapus Data</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Apakah Anda yakin ingin menghapus User <span id="userName"></span>?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-success" data-bs-dismiss="modal">Batal</button>
                          <a id="deleteButton" href="" class="btn btn-danger">Hapus Sekarang</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              `;
              
              tableBody.appendChild(row);
            });
          }
        });
      </script>
      
      
      <script>
        // Mengambil modal elemen
        const modal = document.getElementById('ModalHapus');
        
        // Menambahkan event listener untuk tombol hapus
        modal.addEventListener('show.bs.modal', function (event) {
          // Ambil data dari tombol yang diklik
          const button = event.relatedTarget;
          const userId = button.getAttribute('data-user-id');
          const userName = button.getAttribute('data-user-name');
          
          // Update konten modal dengan data yang tepat
          const userNameElement = modal.querySelector('#userName');
          const deleteButton = modal.querySelector('#deleteButton');
          
          userNameElement.textContent = userName;
          deleteButton.href = `/anggota/delete/${userId}`;
        });
      
        // Menghilangkan pesan alert setelah beberapa detik
        setTimeout(function() {
          var pesanAlert = document.getElementById("pesan-alert");
          if (pesanAlert) {
            pesanAlert.style.display = "none";
          }
        }, 3000); // 3000 ms = 3 detik
      </script>
