<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Anggota Grup</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-image: url("../../images/bg-edit.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }
      .btn-back {
        cursor: pointer;
        border: none;
        background: transparent;
      }
    </style>
  </head>
  <body>
    <button class="btn-back" onclick="window.history.back()">
      <img src="../../images/back.png" height="80" />
    </button>
    <div class="container">
      <h1 class="text-center mb-5 mt-5 text-dark">Edit Anggota Grup</h1>
      <% if (messages.error) { %>
        <div id="pesan-alert" class="alert alert-danger" group="alert"><%- messages.error %></div>
      <% } else if (messages.success) { %>
        <div id="pesan-alert" class="alert alert-info" group="alert"><%- messages.success %></div>
      <% } %>
      <div class="row">
        <div class="justify-content-center col-4">     
          <form action="/anggotagrup/update/<%= data.id_users %>" method="POST">
            <div class="mb-3">
              <label for="id_group" class="form-label">Nama Grup</label>
              <select name="id_group" id="id_group" class="form-control">
                <option disabled>Pilih Grup</option>
                <% for(var i=0; i < data.length; i++) { %>
                <option value="<%= data[i].id_group %>" <%= data[i].id_group === data.id_group ? 'selected' : '' %>><%= data[i].nama_group %></option>
                <% } %>
              </select>
            </div>
            <div class="mb-3">
              <label for="id_users" class="form-label">Anggota</label>
              <select name="id_users" id="id_users" class="form-control">
                <option disabled>Pilih Anggota</option>
                <% for(var i = 0; i < data.length; i++) { %>
                <option value="<%= data[i].id_users %>" <%= data[i].id_users === data.id_users ? 'selected' : '' %>><%= data[i].nama_users %>, <%= data[i].nama_role %></option>
                <% } %>
              </select>
            </div>    
            <div class="mb-3">
              <label for="id_posisi" class="form-label">Posisi</label>
              <select name="id_posisi" id="id_posisi" class="form-control">
                <option disabled>Pilih Posisi</option>
                <% for(var i=0; i < data.length; i++) { %>
                <option value="<%= data[i].id_posisi %>" <%= data[i].id_posisi === data.id_posisi ? 'selected' : '' %>><%= data[i].nama_posisi %></option>
                <% } %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
        <div class="d-flex justify-content-center col-8">
          <img src="../../images/posisi.png" alt="" height="250" />
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      document.getElementById("id_group").addEventListener("change", function () {
        // Enable the users dropdown
        document.getElementById("id_users").disabled = false;

        // Fetch users based on selected group
        updateUsers(this.value);
      });
      
      document.getElementById("id_users").addEventListener("change", function () {
        // Enable the posisi dropdown
        document.getElementById("id_posisi").disabled = false;
      });

      // Function to update users based on selected group
      function updateUsers(groupId) {
        // Fetch users based on groupId and update the id_users dropdown
        fetch(`/anggotagrup/getUsers/${groupId}`)
          .then(response => response.json())
          .then(data => {
            const usersDropdown = document.getElementById("id_users");
            usersDropdown.innerHTML = '<option disabled>Pilih Anggota</option>'; // Reset options

            data.users.forEach(user => {
              const option = document.createElement("option");
              option.value = user.id_users;
              option.textContent = `${user.nama_users}, ${user.nama_role}`;
              usersDropdown.appendChild(option);
            });

            // Enable id_users dropdown if needed
            usersDropdown.disabled = false;
          })
          .catch(error => console.error('Error fetching users:', error));
      }

      // Initial setup for users based on pre-selected group
      const selectedGroupId = document.getElementById("id_group").value;
      if (selectedGroupId) {
        updateUsers(selectedGroupId);
      }
    </script>
  </body>
</html>
