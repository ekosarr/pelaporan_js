<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Anggota Grup</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-image: url("../../images/bg-edit.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }
      .btn-back {
        cursor: pointer;
        border: none;
        background: transparent;
      }
    </style>
  </head>
  <body>
    <button class="btn-back" onclick="window.history.back()">
      <img src="../../images/back.png" height="80" />
    </button>
    <div class="container">
      <h1 class="text-center mb-5 mt-5 text-dark">Tambah Anggota Group</h1>
      <% if (messages.error) { %>
        <div id="pesan-alert" class="alert alert-danger" group="alert"><%- messages.error %></div>
      <% } else if (messages.success) { %>
        <div id="pesan-alert" class="alert alert-info" group="alert"><%- messages.success %></div>
      <% } %>
      <div class="row">
        <div class="justify-content-center col-4">
          <form action="/anggotagrup/store" method="POST">
            <div class="mb-3">
              <label for="id_group" class="form-label">Nama Grup</label>
              <select name="id_group" id="id_group" class="form-control">
                <option selected disabled>Pilih Grup</option>
                <% for(var i=0; i < group.length; i++) { %>
                <option value="<%= group[i].id_group %>"><%= group[i].nama_group %></option>
                <% } %>
              </select>
            </div>
            <div class="mb-3">
              <label for="id_users" class="form-label">Anggota</label>
              <select name="id_users" id="id_users" class="form-control" disabled>
                <option selected disabled>Pilih Anggota</option>
                <% for(var i = 0; i < users.length; i++) { %>
                <option value="<%= users[i].id_users %>"><%= users[i].nama_users %>, <%= users[i].nama_role %></option>
                <% } %>
              </select>
            </div>    
            <div class="mb-3">
              <label for="id_posisi" class="form-label">Posisi</label>
              <select name="id_posisi" id="id_posisi" class="form-control" disabled>
                <option selected disabled>Pilih Posisi</option>
                <% for(var i=0; i < posisi.length; i++) { %>
                <option value="<%= posisi[i].id_posisi %>"><%= posisi[i].nama_posisi %></option>
                <% } %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
          </form>
        </div>
        <div class="d-flex justify-content-center col-8">
          <img src="../../images/posisi.png" alt="" height="250" />
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      document.getElementById("id_group").addEventListener("change", function () {
        var groupId = this.value;
        document.getElementById("id_users").disabled = false;
    
        // Fetch role based on selected group
        fetch(`/anggotagrup/getRole/${groupId}`)
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              var roleId = data.roleId;
              // Fetch users based on role
              updateUsers(roleId);
            } else {
              alert("Gagal mengambil role grup.");
            }
          })
          .catch(error => console.error('Error:', error));
      });
    
      function updateUsers(roleId) {
        fetch(`/anggotagrup/getUsers/${roleId}`)
          .then(response => response.json())
          .then(data => {
            var userDropdown = document.getElementById("id_users");
            userDropdown.innerHTML = '<option selected disabled>Pilih Anggota</option>';
            data.users.forEach(user => {
              var option = document.createElement("option");
              option.value = user.id_users;
              option.textContent = `${user.nama_users}, ${user.nama_role}`;
              userDropdown.appendChild(option);
            });
          })
          .catch(error => console.error('Error:', error));
      }
    
      document.getElementById("id_users").addEventListener("change", function () {
        document.getElementById("id_posisi").disabled = false;
      });
    </script>
    
      
  </body>
</html>
