    <script>
      // Mengambil modal elemen
      const modal = document.getElementById('ModalHapus');
      
      // Menambahkan event listener untuk tombol hapus
      modal.addEventListener('show.bs.modal', function (event) {
        // Ambil data dari tombol yang diklik
        const button = event.relatedTarget;
        const roleId = button.getAttribute('data-role-id');
        const roleName = button.getAttribute('data-role-name');
        
        // Update konten modal dengan data yang tepat
        const roleNameElement = modal.querySelector('#roleName');
        const deleteButton = modal.querySelector('#deleteButton');
        
        roleNameElement.textContent = roleName;
        deleteButton.href = `/role/delete/${roleId}`;
      });
    </script>    
    <script>
      setTimeout(function() {
        var pesanAlert = document.getElementById("pesan-alert");
        if (pesanAlert) {
          pesanAlert.style.display = "none";
        }
      }, 3000); // 5000 ms = 5 detik
    </script>
