          <h1 class="text-center text-dark">Data Peran</h1>
          <% if (messages.error) { %>
            <div id="pesan-alert" class="alert alert-danger" role="alert"><%- messages.error %></div>
          <% } else if (messages.success) { %>
            <div id="pesan-alert" class="alert alert-info" role="alert"><%- messages.success %></div>
          <% } %>
          <form action="/role/store" method="POST">
            <div class="row">
              <div class="col-3">
                <label for="nama_role" class="form-label">Nama Peran</label>
                <input type="text" class="form-control" id="nama_role" name="nama_role" required />
              </div>
            </div>
            <button type="submit" class="btn btn-sm btn-success mt-3"><svg xmlns="http://www.w3.org/2000/svg" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
              <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg> Tambah </button>
          </form>
        </div>
        <div class="col">
          <table class="table border-info mt-2">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama Peran</th>
                <th colspan="2" scope="col">Aksi</th>
                
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < roles.length; i++) { %>
              <tr>
                <th scope="row"><%= i + 1 %></th>
                <td>
                  <span class="role-name"><%= roles[i].nama_role %></span>
                  <input type="text" class="form-control role-input d-none" value="<%= roles[i].nama_role %>"/>
                </td>
                <td>
                  <a href="/role/edit/<%= roles[i].id_role %>" class="btn btn-sm btn-warning <%= roles[i].isUsed ? 'disabled' : '' %>" 
                    <%= roles[i].isUsed ? 'aria-disabled="true"' : '' %>
                  ><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                  </svg></a>
                   <!-- Tombol Hapus -->
                   <button 
                   class="btn btn-sm btn-danger <%= roles[i].isUsed ? 'disabled' : '' %>" 
                   data-bs-toggle="modal" 
                   data-bs-target="#ModalHapus" 
                   data-role-id="<%= roles[i].id_role %>" 
                   data-role-name="<%= roles[i].nama_role %>"
                   <%= roles[i].isUsed ? 'disabled' : '' %>
                 >
                   <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                     <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                     <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                   </svg>
                 </button>
      <!-- Modal -->
      <div class="modal fade" id="ModalHapus" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Hapus Data</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Apakah Anda yakin ingin menghapus <span id="roleName"></span>?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-success" data-bs-dismiss="modal">Batal</button>
              <a id="deleteButton" href="" class="btn btn-danger">Hapus Sekarang</a>
            </div>
          </div>
        </div>
      </div>
    </td>
  </tr>
<% } %>
            </tbody>
          </table>
        </div>
      </div>
